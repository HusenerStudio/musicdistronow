{
  "name": "music-distro-now",
  "version": "1.0.0",
  "description": "A modern music distribution platform for independent artists",
  "main": "server.js",
  "homepage": "https://musicdistronow.netlify.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/music-distro-now.git"
  },
  "keywords": ["music", "distribution", "streaming", "artists", "platform"],
  "author": "MusicDistroNow Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd client && npm start",
    "dev:full": "concurrently \"npm run dev\" \"npm run client\"",
    "install-client": "cd client && npm install",
    "build-client": "cd client && npm run build",
    "build": "echo 'Static site - no build needed'",
    "netlify-build": "echo 'Netlify deployment ready'",
    "heroku-postbuild": "npm run install-client && npm run build-client"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-validator": "^6.12.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.0.5",
    "multer": "^1.4.3",
    "multer-s3": "^2.9.0",
    "aws-sdk": "^2.983.0"
  },
  "devDependencies": {
    "concurrently": "^6.2.1",
    "nodemon": "^2.0.12"
  }
}